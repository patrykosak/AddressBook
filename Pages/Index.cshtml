    <form method="post" role="form">
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Address.Street">Twoja ulubiona ulica</label>
                <span asp-validation-for="Address.Street" class="text-danger"></span>
                <input asp-for="Address.Street" class="form-control" placeholder="Ulica" /><br />
